<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01" android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">


    <TextView
        android:text="Registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

android:gravity="center"

        android:layout_marginTop="20dp" android:textColor="#000000" android:textStyle="bold" android:textSize="18sp"
        android:id="@+id/title" />

    <TextView
        android:text="Mobile Number"
        android:layout_width="match_parent" android:textColor="#000000"
        android:layout_height="wrap_content" android:gravity="center"

        android:layout_marginTop="20dp"
        android:id="@+id/mobnumtitle" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp"
        android:inputType="phone"   android:gravity="center"
        android:ems="10"




        android:id="@+id/mobilenumber_txt"
         />

    <TextView
        android:text="First Name" android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center"
        android:layout_marginTop="5dp"

        android:id="@+id/firnametitle" />

    <EditText
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="wrap_content"  android:layout_marginTop="5dp"
        android:inputType="textPersonName" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:background="@android:color/darker_gray"
               android:id="@+id/firstname_txt" />
        <TextView
            android:text="Last Name" android:textColor="#000000"  android:gravity="center"
            android:layout_width="match_parent"  android:layout_marginTop="5dp"
            android:layout_height="wrap_content"

            android:id="@+id/lastnametitle"
            />
    <EditText
        android:layout_width="match_parent"  android:gravity="center"  android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:background="@android:color/darker_gray"


        android:id="@+id/lastname_txt" />

    <TextView
        android:text="Email Address" android:textColor="#000000"  android:gravity="center"  android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:id="@+id/emailtitle" />

    <EditText
        android:layout_width="match_parent"  android:gravity="center"  android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"

        android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:background="@android:color/darker_gray"
        android:id="@+id/emailid_txt" />

    <TextView
        android:text="Password" android:textColor="#000000" android:gravity="center"  android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/pwdtitle" />

    <EditText
        android:layout_width="match_parent"  android:gravity="center"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:background="@android:color/darker_gray"
        android:id="@+id/pwd_txt" />

    <TextView
        android:text="Confirm Password" android:textColor="#000000"  android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/confimpwdtitle" />

    <EditText
        android:layout_width="match_parent"  android:gravity="center"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp"
        android:id="@+id/confirmpwdtxt" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content" android:textColor="#000000"
        android:layout_height="wrap_content" android:gravity="center"
android:layout_gravity="center"
        android:layout_marginTop="20dp"

        android:id="@+id/submit_btn"
       />



        </LinearLayout>
    </ScrollView>